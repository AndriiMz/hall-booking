{%  extends 'layout/default.html.twig' %}
{% block body %}
    <div class="container">
        <div class="login-form">
            <form method="post" action="{{ path('registration') }}">
                <h4>Rejestracja</h4>
                {% if errors %}
                    <div class="alert alert-danger" role="alert">
                        {{ errors }}
                    </div>
                {% endif %}
                <div class="form-row row">
                    <label for="value" class="col-md-2 col-form-label">
                        Imię
                    </label>
                    <div class="col-md-10 mb-3">
                        <input type="text" value="{{ request.get('firstName') }}" name="firstName" class="form-control" placeholder="Imię" required="" />
                    </div>
                </div>
                <div class="form-row row">
                    <label for="value" class="col-md-2 col-form-label">
                        E-mail
                    </label>
                    <div class="col-md-10 mb-3">
                        <input type="email" value="{{ request.get('email') }}" name="email" class="form-control" placeholder="E-mail" required="" />
                    </div>
                </div>
                <div class="form-row row">
                    <label for="value" class="col-md-2 col-form-label">
                        Telefon
                    </label>
                    <div class="col-md-10 mb-3">
                        <input type="text" value="{{ request.get('phone') }}" name="phone" class="form-control" placeholder="Telefon" required="" />
                    </div>
                </div>
                <div class="form-row row">
                    <label for="value" class="col-md-2 col-form-label">
                        Login
                    </label>
                    <div class="col-md-10 mb-3">
                        <input type="text" value="{{ request.get('username') }}" name="username" class="form-control" placeholder="Login" required="" />
                    </div>
                </div>
                <div class="form-row row">
                    <label for="value" class="col-md-2 col-form-label">
                        Hasło
                    </label>
                    <div class="col-md-10 mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Hasło" required="" />
                    </div>
                </div>

                <div class="form-footer">
                    <button class="btn btn-primary btn-lg" type="submit">Dalej</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}