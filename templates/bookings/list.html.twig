{%  extends 'layout/default.html.twig' %}
{% block body %}
    <div class="container">
        <h3>Rezerwacje</h3>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sala</th>
                <th scope="col">Data</th>
                <th scope="col">Ilość osób</th>
                <th scope="col">Komentarz</th>
                <th scope="col">Klient</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr>
                    <th scope="row">{{ booking.id }}</th>
                    <td>{{ booking.sala.nazwa }}</td>
                    <td>{{ booking.dataOd|date("m/d/Y") }} - {{ booking.dataDo|date("m/d/Y") }}</td>
                    <td>{{ booking.iloscOs }}</td>
                    <td>{{ booking.komentarz }}</td>
                    <td>{{ booking.klient.firstName }} {{ booking.klient.lastName }}</td>
                    <td>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}